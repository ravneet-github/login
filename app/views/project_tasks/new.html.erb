<h1 class="project_list_title">Add New Task</h1>

<%= form_for([@project_list, @project_list.project_tasks.build]) do |f| %>

<div class="forms">
	<%= f.label :content %>
	<%= f.text_field :content, placeholder: "New Task" %>
</div>
&nbsp;&nbsp;
<div class="forms">
	<%= f.label :task_deadline %>
	<%= f.date_field :task_deadline%>
</div>
&nbsp;&nbsp;
<div class="forms">
	<%= f.label :choose_file %>
	<%= f.file_field :image, placeholder: "Choose file"%>
</div>
&nbsp;&nbsp;
<div class="actions">
    <%= f.submit %>
  </div>

<% end %>
<div class="links">
	<%= link_to 'Back', project_lists_path %>
</div>